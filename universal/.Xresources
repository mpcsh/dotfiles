!bar
barHeight: 48
barOffset: 18
background: #222222
foreground: #c2c2b0

!font
Xft.dpi: 96
*font: xft:M+1mn:size=12
*barFont: xft:M+1mn:size=12
*iconFont: xft:FontAwesome:size=12

!font rendering
Xft.antialias: true
Xft.autohint: false
Xft.hinting: true
Xft.hintstyle: hintfull
Xft.lcdfilter: none
Xft.rgba: rgba

! special
*.foreground:   #b5b5a4
*.background:   #222222

! black
*.color0:       #555555
*.color8:       #888888

! red
*.color1:       #aa4450
*.color9:       #ff6a6a

! green
*.color2:       #719611
*.color10:      #b1d631

! yellow
*.color3:       #cc8800
*.color11:      #ff9800

! blue
*.color4:       #6688aa
*.color12:      #90b0d1

! magenta
*.color5:       #8f6f8f
*.color13:      #8181a6

! cyan
*.color6:       #528b8b
*.color14:      #87ceeb

! white
*.color7:       #dddddd
*.color15:      #ffffff
