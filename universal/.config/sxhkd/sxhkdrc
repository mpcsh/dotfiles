#
# bspwm-specific hotkeys
#

# kill focused node
super + q
	bspc node -c

# focus given direction
super + {h,j,k,l}
	bspc config pointer_follows_focus true; bspc node -f {west,south,north,east}; bspc config pointer_follows_focus false;

# swap focused node with node in given direction
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

# send focused node to given desktop
super + shift + {0-5}
	bspc node -d {0-5}

# focus given desktop
super + {0-5}
	bspc desktop -f {0-5}

# toggle fullscreen for focused node
super + shift + f
	bspc node -t ~fullscreen

# vertically mirror the desktop
super + shift + v
	bspc node @/ -F vertical

#
# application shortcuts
#

# lock
super + Escape
	~/dotfiles/scripts/lock

# lock and suspend
super + shift + Escape
	~/dotfiles/scripts/suspend

# termite
super + grave
	termite

# chromium
super + f
	firefox

# take screenshot
super + Print
	scrot -e 'mv $f ~/scrots/'

# ranger
super + r
	termite -e ranger

# dmenu
super + space
	~/dotfiles/scripts/menu dmenu_run

# passmenu
super + p
	~/dotfiles/scripts/menu passmenu

# spotify
super + s
	~/dotfiles/scripts/hidpi spotify 1.15 1.0001

# irssi
super + i
	termite -e irssi

# pop up the lemonbar
super + b
	~/dotfiles/scripts/barctl peek

# toggle the lemonbar
super + shift + b
	~/dotfiles/scripts/barctl toggle

#
# laptop function keys
#

# increase brightness
XF86MonBrightnessUp
	~/dotfiles/scripts/xbacklightup

# decrease brightness
XF86MonBrightnessDown
	~/dotfiles/scripts/xbacklightdown

# increase volume
XF86AudioRaiseVolume
	pamixer -i 5

# decrease volume
XF86AudioLowerVolume
	pamixer -d 5

# toggle mute
XF86AudioMute
	pamixer -t
