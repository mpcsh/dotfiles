#
# bspwm-specific hotkeys
#

# kill focused node
super + q
	bspc node -c

# focus given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# swap focused node with node in given direction
super + shift +  {h,j,k,l}
	bspc node -s {west,south,north,east}

# send focused node to given desktop
super + shift + {0-9}
	bspc node -d {0-9}

# focus given desktop
super + {0-9}
	bspc desktop -f {0-9}

# toggle fullscreen for focused node
super + shift + f
	bspc node -t ~fullscreen

# swap focused node with biggest node
super + shift + b
	bspc node -s biggest

# vertically mirror the desktop
super + shift + v
	bspc node @/ -F vertical

# reload bspwm config
super + shift + ctrl + Escape
	~/.config/bspwm/bspwmrc

#
# application shortcuts
#

# lock
super + Escape
	~/dotfiles/scripts/lock

# lock and suspend
super + shift + Escape
	~/dotfiles/scripts/suspend

# launch termite
super + grave
	termite

# launch chromium
super + c
	~/dotfiles/scripts/hidpi chromium 1.15 1

# take screenshot
super + Print
	scrot -e 'mv $f ~/scrots/'

# launch ranger
super + r
	termite -e ranger

# launch dmenu
super + space
	~/dotfiles/scripts/menu dmenu_run

# launch passmenu
super + p
	~/dotfiles/scripts/menu passmenu

# launch spotify
super + s
	~/dotfiles/scripts/hidpi spotify 1.15 1.0001

# launch irssi
super + i
	termite -e irssi

# launch toxic
super + t
	termite -e toxic

#
# laptop function keys
#

# increase brightness
XF86MonBrightnessUp
	~/dotfiles/scripts/xbacklightup

# decrease brightness
XF86MonBrightnessDown
	~/dotfiles/scripts/xbacklightdown

# increase volume
XF86AudioRaiseVolume
	pamixer -i 5

# decrease volume
XF86AudioLowerVolume
	pamixer -d 5

# toggle mute
XF86AudioMute
	pamixer -t
