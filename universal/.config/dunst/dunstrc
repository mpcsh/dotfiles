[global]
    allow_markup = yes
    format = "%s\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = left
    word_wrap = yes
    ignore_newline = no
    geometry = "500x64-12+12"
    transparency = 0
    follow = mouse
    sticky_history = yes
    padding = 12
    horizontal_padding = 12
    separator_color = "#999999"
    startup_notification = false

[frame]
    width = 6
    color = "#444444"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#222222"
    foreground = "#bbbbbb"
    timeout = 5

[urgency_normal]
    background = "#222222"
    foreground = "#dddddd"
    timeout = 10

[urgency_critical]
