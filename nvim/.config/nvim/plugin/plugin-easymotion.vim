" better search keys (no semicolon)
let g:EasyMotion_keys = "asdghklqwertyuiopzxcvbnmfj"

" keybind to enter search mode
map <Leader>w <Plug>(easymotion-bd-w)

" highlighting
hi EasyMotionTarget guibg=none guifg=#fb4934
