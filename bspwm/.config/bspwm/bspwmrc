#! /usr/bin/env bash

# themes!
xrdb ~/.Xresources
xrdb -merge ~/.colors/nord
feh --no-fehbg --bg-fill ~/.wallpaper &

# make caps be escape
setxkbmap -option caps:escape &

# don't use that stupid cross pointer
xsetroot -cursor_name left_ptr &

# no bell
xset -b &

# disable auto screensaver
xset s off -dpms &

# no mouse acceleration
xset m 0 0

# key repeat rate
xset r rate 250

# configure borders, gaps
bspc config bottom_padding $(xrq barHeight)
bspc config border_width 4
bspc config window_gap 18
bspc config split_ratio 0.5

# preselection color
bspc config presel_feedback_color $(xrq color0)

# focusing
bspc config focus_follows_pointer true
bspc config ignore_ewmh_focus true

# set workspaces
bspc monitor -d 1 2 3 4 5 6 7 8 9 0

# libreoffice starts floating for some reason
bspc rule -a *:libreoffice state=tiled
bspc rule -a Zathura state=tiled

# autostart apps
polybar main &
nm-applet &
dropbox &
redshift &
run_keybase &
compton -r 6 -o 0.75 &

if [[ $HOSTNAME = "greeley" || $HOSTNAME = "blanc" ]]; then
  # don't blind me
  xbacklight -set 50

  # two/three finger click!
  xinput --set-prop "SynPS/2 Synaptics TouchPad" "libinput Click Method Enabled" 0 1
fi

# start sxhkd
sxhkd &
