#! /usr/bin/env bash

# themes!
xrdb ~/.Xresources
feh --no-fehbg --bg-fill ~/.wallpaper &

# don't use that stupid cross pointer
xsetroot -cursor_name left_ptr &

# no bell
xset -b &

# disable auto screensaver
xset s off -dpms &

# configure borders, gaps
bspc config bottom_padding $(xrq barHeight)
bspc config border_width 0
bspc config window_gap 18
bspc config split_ratio 0.5

# preselection color
bspc config presel_feedback_color $(xrq color0)

# focusing
bspc config focus_follows_pointer true
bspc config pointer_follows_focus true
bspc config ignore_ewmh_focus true

# set workspaces
bspc monitor -d 1 2 3 4 5 6 7 8 9 0

# libreoffice, zathura start floating for some reason
bspc rule -a libreoffice state=tiled
bspc rule -a .zathura-wrapped_ state=tiled

# configure keyboard
xset r rate 250
setxkbmap -option caps:escape

# autostart apps
polybar main &
nm-applet &
dropbox &
run_keybase &
redshift -t 5500:3000 &
compton -I 0.01 -O 0.01 -D 3 -i 0.75 &

if [[ $(hostname) = "quitaraju" || $(hostname) = "blanc" ]]; then
  # don't blind me
  xbacklight -set 50
fi

# start sxhkd
sxhkd &
