#!/usr/bin/env bash

# themes!
xrdb ~/.Xresources
feh --no-fehbg --bg-fill ~/.wallpaper &

# don't use that stupid cross pointer
xsetroot -cursor_name left_ptr &

# no bell
xset -b &

# disable auto screensaver
xset s off -dpms &

# configure borders, gaps
bspc config border_width 0
bspc config window_gap 36
bspc config split_ratio 0.5

# preselection color
bspc config presel_feedback_color $(xrq color0)

# focusing
bspc config focus_follows_pointer true
bspc config pointer_follows_focus true
bspc config ignore_ewmh_focus true

# set workspaces
bspc monitor -d 1 2 3 4 5 6 7 8 9 0

# libreoffice, zathura start floating for some reason
bspc rule -a libreoffice state=tiled
bspc rule -a Zathura state=tiled

# special app desktops
bspc rule -a Blueberry.py state=floating
bspc rule -a Pavucontrol state=floating

# configure keyboard
xset r rate 250
setxkbmap -option caps:escape

# autostart apps
nm-applet &
blueberry-tray &
dropbox &
run_keybase &
redshift -t 6000:3500 &
compton -I 0.01 -O 0.01 -D 2 --vsync &
flashfocus -o 0.9 &
polybar main &

# start sxhkd
sxhkd &
