#! /bin/bash
set -euo pipefail
IFS=$'\n\t'

source screen_vars

# configure borders, gaps
bspc config border_width "$BORDER_WIDTH"
bspc config window_gap "$GAPS"
bspc config split_ratio 0.5

# preselection color
bspc config presel_feedback_color "$FG"

# focusing
bspc config pointer_follows_focus true
bspc config ignore_ewmh_focus true

# set workspaces
bspc monitor -d 1 2 3 4 0

# start the bar
polybar main &

# don't blind me
xbacklight -set 50

# disable coasting
synclient CoastingSpeed=0

# enable two-finger horizontal scrolling
synclient HorizTwoFingerScroll=1
