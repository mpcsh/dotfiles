[Trigger]
Operation = Upgrade
Type = Package
Target = pacman-mirrorlist

[Action]
Description = Updating pacman-mirrorlist with reflector...
When = PostTransaction
Depends = reflector
Exec = /usr/bin/bash -c "reflector --country 'United States' --age 24 --sort rate -n 10 --threads 4 --save /etc/pacman.d/mirrorlist"
