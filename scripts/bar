# else
# 	echo "Need to configure lemonbar for new hostname"
# fi
nice lemonbar -B $BG -F $FG -g $WIDTH\x$HEIGHT\+$XOFF\+$YOFF -o 1 -f $FONT -o -2 -f $ICONS
