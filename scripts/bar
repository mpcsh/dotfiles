#!/usr/bin/env bash

source screen_vars

if [[ $# != 1 ]]; then
	echo "Usage: bar [top|bottom]"
elif [[ $1 == "top" ]]; then
	nice lemonbar -B $BG -F $FG -g $WIDTH\x$HEIGHT\+$XOFF\+$YOFF -o 1 -f $FONT -o -2 -f $ICONS
else
	BOTTOM_YOFF=$(( $SCREENHEIGHT-$HEIGHT-$YOFF ))
	nice lemonbar -B $BG -F $FG -g $WIDTH\x$HEIGHT\+$XOFF\+$BOTTOM_YOFF -o 1 -f $FONT -o -2 -f $ICONS
fi
