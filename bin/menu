#!/usr/bin/env bash

BG="$(xrq background)"
FG="$(xrq foreground)"
BAR_WIDTH="$(xdpyinfo | awk '/dimensions:/ {print $2; exit}' | cut -dx -f1)"
BAR_HEIGHT="$(xrq barHeight)"
FONT="$(xrq font | cut -d: -f2,3)"
USAGE="Usage: menu [top|bottom]"

if [[ $# != 1 ]]; then
  echo "$USAGE"
elif [[ $1 == "top" ]]; then
  MENU_ARGS=""
elif [[ $1 == "bottom" ]]; then
  MENU_ARGS="-b"
else
  echo "$USAGE"
fi

dmenu_run -fn "$FONT" -w "$BAR_WIDTH" -h "$BAR_HEIGHT" -nb "$BG" -nf "$FG" -sb "$FG" -sf "$BG" $MENU_ARGS
