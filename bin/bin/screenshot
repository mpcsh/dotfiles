#!/usr/bin/env zsh

USAGE="Usage: screenshot [select]"

FILE=~/scrots/$(date +%F-%H%M%S).jpg

if [[ $# == 0 ]]; then
	maim -m 10 "$FILE"
	0x0 "$FILE" | xclip -selection clipboard
	notify-send "Screenshot uploaded"
elif [[ $1 == "select" && $# == 1 ]]; then
	maim -m 10 -s "$FILE"
	0x0 "$FILE" | xclip -selection clipboard
	notify-send "Screenshot uploaded"
else
	echo "$USAGE"
fi
