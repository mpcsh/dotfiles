#!/usr/bin/env fish

set -l USAGE "usage: pomo [start|break|longbreak]"

if test (count $argv) != 1
  echo $USAGE
else if test $argv[1] = "start"
  termdown -t "DONE" 25m
else if test $argv[1] = "break"
  termdown -t "DONE" 5m
else if test $argv[1] = "longbreak"
  termdown -t "DONE" 15m
else
  echo $USAGE
end
