### wm config
# mod <- win key
set $mod Mod4

# font for nagbars
font pango:Iosevka Term 12

# mouse+mod for floating mode dragging
floating_modifier $mod

# Gaps around windows
gaps inner 24

# disable focus wrapping
focus_wrapping no

# remove the title bar
for_window [class="^.*"] border pixel 0

### keybinds
# applications
bindsym $mod+s exec $HOME/dotfiles/bin/hidpi spotify
bindsym $mod+r exec kitty ranger
bindsym $mod+f exec firefox
bindsym $mod+grave exec kitty
bindsym $mod+space exec --no-startup-id ~/dotfiles/bin/menu bottom

# bar
bindsym $mod+b exec --no-startup-id $HOME/dotfiles/bin/toggle-polybar

# displays
bindsym $mod+Mod1+l exec --no-startup-id $HOME/dotfiles/bin/laptop-mode
bindsym $mod+Mod1+d exec --no-startup-id $HOME/dotfiles/bin/desktop-mode

# lockscreen
bindsym $mod+Escape exec --no-startup-id $HOME/dotfiles/bin/lock
bindsym $mod+Shift+Escape exec --no-startup-id $HOME/dotfiles/bin/lock-suspend

# volume
bindsym XF86AudioMute exec --no-startup-id pamixer -t
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 5
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 5

# brightness
bindsym XF86MonBrightnessUp exec --no-startup-id ~/dotfiles/bin/backlightctl up
bindsym XF86MonBrightnessDown exec --no-startup-id ~/dotfiles/bin/backlightctl down

# play/pause
bindsym XF86AudioPlay exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym $mod+Up exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"

# next song
bindsym XF86AudioNext exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym $mod+Right exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

# prev song
bindsym XF86AudioPrev exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym $mod+Left exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

# keyboard layout switching
bindsym $mod+Mod1+e exec --no-startup-id setxkbmap -layout us -option caps:escape
bindsym $mod+Mod1+s exec --no-startup-id setxkbmap -layout es -option caps:escape

# change focus, move window
bindsym $mod+h focus left
bindsym $mod+Shift+h move left
bindsym $mod+j focus down
bindsym $mod+Shift+j move down
bindsym $mod+k focus up
bindsym $mod+Shift+k move up
bindsym $mod+l focus right
bindsym $mod+Shift+l move right

# kill focused window
bindsym $mod+q kill

# splith, splitv
bindsym $mod+backslash split h
bindsym $mod+minus split v

# fullscreen, floating
bindsym $mod+Shift+f fullscreen toggle
bindsym $mod+Shift+space floating toggle

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+0 workspace 0

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+0 move container to workspace 0

# reload the configuration file
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

### window type auto rules
# make pavucontrol always floating
for_window [class="Pavucontrol"] floating enable
for_window [class="Blueberry"] floating enable

# make slack, spotify, keybase, discord always show up on workspace 0
for_window [class="Slack"] move container to workspace 0
for_window [class="Spotify"] move container to workspace 0
for_window [class="Keybase"] move container to workspace 0
for_window [class="Discord"] move container to workspace 0

### startup scripts
exec --no-startup-id ~/.config/i3/i3rc
