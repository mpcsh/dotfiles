### wm config
# mod <- win key
set $mod Mod4

# font for nagbars
font pango:M+ 1mn 12

# mouse+mod for floating mode dragging
floating_modifier $mod

# Gaps around windows
gaps inner 18

# disable focus wrapping
focus_wrapping no

# remove the title bar
for_window [class="^.*"] border pixel 0

### keybinds
# applications
bindsym $mod+s exec $HOME/dotfiles/bin/hidpi spotify
bindsym $mod+c exec google-chrome-stable
bindsym $mod+f exec firefox
bindsym $mod+grave exec alacritty
bindsym $mod+space exec ~/dotfiles/bin/menu bottom

# bar
bindsym $mod+b exec $HOME/dotfiles/bin/toggle_polybar

# lockscreen
bindsym $mod+Escape exec $HOME/dotfiles/bin/lock
bindsym $mod+Shift+Escape exec $HOME/dotfiles/bin/lock_suspend

# volume
bindsym XF86AudioMute exec pamixer -t
bindsym XF86AudioLowerVolume exec pamixer -d 5
bindsym XF86AudioRaiseVolume exec pamixer -i 5

# brightness
bindsym XF86MonBrightnessUp exec ~/dotfiles/bin/backlightctl up
bindsym XF86MonBrightnessDown exec ~/dotfiles/bin/backlightctl down

# play/pause
bindsym XF86AudioPlay exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym $mod+Up exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"

# next song
bindsym XF86AudioNext exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym $mod+Right exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

# prev song
bindsym XF86AudioPrev exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym $mod+Left exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

# keyboard layout switching
bindsym $mod+Mod1+e exec setxkbmap -layout us -option caps:escape
bindsym $mod+Mod1+s exec setxkbmap -layout es -option caps:escape

# change focus, move window
bindsym $mod+h focus left
bindsym $mod+Shift+h move left
bindsym $mod+j focus down
bindsym $mod+Shift+j move down
bindsym $mod+k focus up
bindsym $mod+Shift+k move up
bindsym $mod+l focus right
bindsym $mod+Shift+l move right

# kill focused window
bindsym $mod+q kill

# splith, splitv
bindsym $mod+backslash split h
bindsym $mod+minus split v

# fullscreen, floating
bindsym $mod+Shift+f fullscreen toggle
bindsym $mod+Shift+space floating toggle

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+0 workspace 0

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+0 move container to workspace 0

# reload the configuration file
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

### window type auto rules
# make pavucontrol always floating
for_window [class="Pavucontrol"] floating enable

# make slack, spotify, keybase, discord always show up on workspace 0
for_window [class="Slack"] move container to workspace 0
for_window [class="Spotify"] move container to workspace 0
for_window [class="Keybase"] move container to workspace 0
for_window [class="Discord"] move container to workspace 0

### startup scripts
exec --no-startup-id ~/.config/i3/i3rc
