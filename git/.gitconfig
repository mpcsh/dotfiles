[user]
	email = m@mpc.sh
	name = Mark Cohen
[includeIf "gitdir:work/"]
  path = ~/.gitconfig.work
[push]
	default = current
[pull]
	rebase = true
[alias]
	co = checkout
	ci = commit
	st = status
	staged = diff --cached
	push-please = push --force-with-lease
	hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[advice]
	detachedHead = false
[help]
	autoCorrect = -1
[color "status"]
	added = green
	changed = yellow
	untracked = red
[core]
	pager = less -FR
	fileMode = false
[color]
	status = always
	ui = always
[url "git@github.com:"]
	insteadOf = gh://
[init]
	defaultBranch = main
[merge]
	conflictstyle = diff3
